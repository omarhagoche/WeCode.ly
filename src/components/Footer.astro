    <div class="max-w-6xl mx-auto">
      <div class="grid md:grid-cols-3 gap-8 mb-8">
        <div class="space-y-4">
          <img
            src="images/wecode-logo-dark.png"
            alt="WeCode Libya"
            width="150"
            height="60"
            class="h-12 w-auto"
            loading="lazy"
